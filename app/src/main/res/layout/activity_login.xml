<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.login.LoginActivity">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/signup_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="60dp"
		android:layout_marginBottom="60dp"
		android:layout_marginLeft="50dp"
		android:layout_marginRight="50dp"
		android:background="@drawable/bg_white_rounded_border"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent">

		<ImageView
			android:id="@+id/login_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/ic_close"
			android:padding="15dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>

		<FrameLayout
			android:id="@+id/login_fragmentContainer"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			app:layout_constraintTop_toBottomOf="@+id/login_close"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent">

			<fragment
				android:name="com.woodgrove.android.ui.login.LoginEmailPasswordFragment"
				android:id="@+id/title_fragment"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:layout="@layout/fragment_login_email_password" />
		</FrameLayout>

	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>