<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Woodgrove" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_200</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/black</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_200</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.Woodgrove.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.Woodgrove.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.Woodgrove.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="TransparentFloatingActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@color/custom_transparent</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:backgroundDimEnabled">false</item>
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>

		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/theme_colour_2</item>
		<item name="colorSecondaryVariant">@color/theme_colour_22</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">@color/black</item>
	</style>

	<style name="TextInputTheme" parent="TransparentFloatingActivity">
		<item name="colorPrimary">@color/purple_700</item>
		<item name="colorControlActivated">@color/theme_colour_2</item>
	</style>
</resources>